<!-- app/views/employees/index.html.erb -->
<h1>Employees List</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.email %></td>
        <td><%= employee.phone %></td>
        <td>
          <%= link_to "View", employee_path(employee), class: "view-link" %>
          <%= link_to "Edit", edit_employee_path(employee), class: "edit-link" %>
          <%= button_to "Delete", employee_path(employee), method: :delete, data: { confirm: "Are you sure you want to delete this employee?" }, class: "delete-button" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Employee", new_employee_path, class: "new-employee-link" %>



